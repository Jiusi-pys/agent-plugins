{
  "hooks": [
    {
      "event": "PostToolUse",
      "matcher": {
        "tool_name": "Bash",
        "exit_code_not": 0,
        "output_contains": ["error:", "undefined reference", "No such file"]
      },
      "script": "scripts/on_compile_error.sh"
    },
    {
      "event": "Stop",
      "matcher": {},
      "script": "scripts/on_session_end.sh"
    }
  ]
}
