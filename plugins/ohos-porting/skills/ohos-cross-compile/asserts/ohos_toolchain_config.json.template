{
  "$schema": "./ohos_toolchain_config.schema.json",
  "_comment": "OpenHarmony Cross-Compilation Toolchain Configuration",
  
  "ohos_sdk_root": "/path/to/OpenHarmony/prebuilts/ohos-sdk/linux/11/native",
  
  "toolchain": {
    "cc": "${ohos_sdk_root}/llvm/bin/aarch64-unknown-linux-ohos-clang",
    "cxx": "${ohos_sdk_root}/llvm/bin/aarch64-unknown-linux-ohos-clang++",
    "ar": "${ohos_sdk_root}/llvm/bin/llvm-ar",
    "ranlib": "${ohos_sdk_root}/llvm/bin/llvm-ranlib",
    "strip": "${ohos_sdk_root}/llvm/bin/llvm-strip",
    "objdump": "${ohos_sdk_root}/llvm/bin/llvm-objdump",
    "readelf": "${ohos_sdk_root}/llvm/bin/llvm-readelf",
    "nm": "${ohos_sdk_root}/llvm/bin/llvm-nm"
  },
  
  "sysroot": "${ohos_sdk_root}/sysroot",
  
  "cxx_runtime": {
    "shared": "${ohos_sdk_root}/llvm/lib/aarch64-linux-ohos/libc++_shared.so",
    "static": "${ohos_sdk_root}/llvm/lib/aarch64-linux-ohos/libc++_static.a",
    "abi": "${ohos_sdk_root}/llvm/lib/aarch64-linux-ohos/libc++abi.a"
  },
  
  "build_tools": {
    "gn": "/path/to/openharmony_prebuilts/gn",
    "ninja": "/path/to/openharmony_prebuilts/ninja"
  },
  
  "target": {
    "triple": "aarch64-linux-ohos",
    "arch": "aarch64",
    "cpu": "arm64",
    "os": "ohos"
  },
  
  "default_flags": {
    "cflags": ["-D__MUSL__"],
    "cxxflags": ["-std=c++17", "-D__MUSL__"],
    "ldflags": ["-fuse-ld=lld"],
    "rpath": ["/data", "/system/lib64"]
  },
  
  "deploy": {
    "dev_path": "/data",
    "system_path": "/system/lib64",
    "project_path": "/data/${project_name}/lib"
  },
  
  "device": {
    "connection": "hdc",
    "serial": "",
    "_comment_connection": "hdc for OpenHarmony, adb for Android-like"
  }
}
